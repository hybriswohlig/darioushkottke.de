# N&E Innovations Compliance Portal - Apache Configuration
# Deployed on AWS Lightsail (Bitnami LAMP with PHP-FPM)

# Enable Rewrite Engine
RewriteEngine On

# Redirect to HTTPS (enable once SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect old visitor login/logout URLs to new user auth URLs
RewriteRule ^visitor-login\.php$ /login.php [R=301,L]
RewriteRule ^visitor-logout\.php$ /logout.php [R=301,L]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Default index
RewriteRule ^index\.html$ index.php [L]
RewriteRule ^$ index.php [L]

# Custom error pages
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# Security headers
<IfModule mod_headers.c>
    # Prevent clickjacking (allows same-origin iframes for PDF viewer)
    Header always set X-Frame-Options "SAMEORIGIN"

    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Protect sensitive files
<FilesMatch "(\.htaccess|\.user\.ini|config\.php|db\.php|\.env|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable directory browsing
Options -Indexes

# NOTE: PHP settings are configured in .user.ini (required for PHP-FPM)
# The .user.ini file sets: upload_max_filesize, post_max_size, memory_limit, max_execution_time
